<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AffichageShopServlet</servlet-name>
        <servlet-class>servlets.AffichageShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateShopServlet</servlet-name>
        <servlet-class>servlets.CreateShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UpdateShopServlet</servlet-name>
        <servlet-class>servlets.UpdateShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowStaffServlet</servlet-name>
        <servlet-class>servlets.ShowStaffServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowEmployeeServlet</servlet-name>
        <servlet-class>servlets.ShowEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateEmployeeServlet</servlet-name>
        <servlet-class>servlets.CreateEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
        <servlet-class>servlets.UpdateEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeconnexionServlet</servlet-name>
        <url-pattern>/deconnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/log</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AffichageShopServlet</servlet-name>
        <url-pattern>/shops</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateShopServlet</servlet-name>
        <url-pattern>/createShop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateShopServlet</servlet-name>
        <url-pattern>/updateshop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowStaffServlet</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowEmployeeServlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateEmployeeServlet</servlet-name>
        <url-pattern>/createemployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
        <url-pattern>/updateemployee</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeconnexionServlet</servlet-name>
        <servlet-class>servlets.DeconnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>servlets.InscriptionServlet</servlet-class>
    </servlet>
    <listener>
        <listener-class>config.InitialisationDaoFactory</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
